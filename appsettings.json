{
    "Serilog": {
        "Using": ["Serilog.Sinks.File"],
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/identity-.txt",
                    "rollingInterval": "Day"
                }
            }
        ],
        "Enrich": ["FromLogContext", "WithMachineName"],
        "Properties": {
            "ApplicationName": "Identity"
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "Default": "Data Source=data/identity.db;"
    },
    "AllowedHosts": "*",
    "Identity": {
        "PasswordConfig": {
            "RequiredUniqueChars": 1,
            "RequireDigit": true,
            "RequiredLength": 8,
            "RequireLowercase": true,
            "RequireUppercase": true,
            "RequireNonAlphanumeric": true
        },
        "LockoutConfig": {
            "AllowedForNewUsers": true,
            "MaxFailedAccessAttempts": 5,
            "DefaultLockoutMinutes": 5
        },
        "CookieConfig": {
            "ExpireTimeMinutes": 10,
            "SlidingExpiration": true
        },
        "SecurityStampConfig": {
            "ValidationInterval": 10
        }
    },
    "SessionConfig": {
        "IdleTimeoutMinutes": 10,
        "CookieMaxAgeMinutes": 10
    }
}
